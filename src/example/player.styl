html, body
  height 100%
body
  font-family 'Maven Pro', sans-serif
  // background url('science.png') fixed repeat
html, body, h1, h2, p, ul, div
  margin 0
  padding 0

ul
  list-style-type circle
  margin-left 1.33em
#container
  background-color rgba(255,255,255,0.95)
  max-width 800px
  margin 0 auto
  height 100%
  overflow-y scroll
  overflow-x hidden
#main
  position relative
  padding 5%
  p, h1, h2, ul
    margin-bottom 1em

a
  color #c00
  text-decoration none
  &.disabled
    color #999
    &.chosen
      color #000
      &:hover
        color #000
  &:hover
    text-decoration underline
    color #f00
    &.disabled
      text-decoration none
      color #999
      cursor not-allowed

// assume all ul's are choices:
ul
  list-style-type none
  list-style-image none
  margin-left 0

  text-align right

  a
    display inline-block
    padding 0.5em 1em
    margin 0.5em
    margin-left 0
    
    color #fff
    background #ffb600
    border-radius 2px
    box-shadow inset 0 -1px 0 rgba(0,0,0,0.25)
    
    &:hover
      background #e29e00
      color #fff
      text-decoration none
      
    &:active
      background #bc8400

    &.disabled
      color #fff
      display none

    &.chosen
      display inline-block
      color #fff
      background #ccc
